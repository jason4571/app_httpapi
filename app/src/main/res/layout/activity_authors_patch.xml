<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username:">
        </TextView>

        <EditText
            android:id="@+id/etxt_patch_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name:"></TextView>

        <EditText
            android:id="@+id/etxt_patch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender:"></TextView>

        <EditText
            android:id="@+id/etxt_patch_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="f,m,o">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address:"></TextView>

        <EditText
            android:id="@+id/etxt_patch_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_patch_certain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="確定">
        </Button>

    </TableRow>

</TableLayout>