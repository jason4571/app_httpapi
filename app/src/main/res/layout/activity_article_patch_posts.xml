<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title:">
        </TextView>

        <EditText
            android:id="@+id/etxt_patch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content:"></TextView>

        <EditText
            android:id="@+id/etxt_patch_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_patch_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tags:"></TextView>

        <EditText
            android:id="@+id/etxt_patch_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,2">
        </EditText>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_patch_certain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="確定">
        </Button>
        <TextView
            android:id="@+id/txt_cookie_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </TableRow>

</TableLayout>
